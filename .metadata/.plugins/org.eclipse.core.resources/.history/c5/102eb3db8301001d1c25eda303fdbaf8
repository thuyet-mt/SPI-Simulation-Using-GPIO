void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin){
	int x;
	x=HAL_GPIO_ReadPin(GPIOA, Read_Pulse_Pin);
	enqueue(&q, HAL_GPIO_ReadPin(GPIOA, Read_Pulse_Pin));
}
